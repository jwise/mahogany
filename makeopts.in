# makeopts template file for M
# $Id$

# set build root directories:
SOURCEDIR := @SOURCEDIR@
BUILDDIR  := @BUILDDIR@
top_builddir := @BUILDDIR@

# the c-client library:
CCLIENTOSTYPE=@CCOSTYPE@
CCLIENT_EXTRAAUTHENTICATORS=@CCLIENT_EXTRAAUTHENTICATORS@
CCLIENT_EXTRACFLAGS=EXTRACFLAGS="@CCLIENT_EXTRACFLAGS@"

# where we have the Icon xpms:
ICONDIR=$(SOURCEDIR)/src/icons

# this will be set or unset
@MAKE_USE_PYTHON@
@MAKE_USE_SWIG@
@MAKE_DEBUG@
@MAKE_EXPERIMENTAL@
@MAKE_LIBTOOL@
@MAKE_USE_MODULES@
@MAKE_USE_LEAKTRACER@
@MAKE_PISOCKLIB@
@MAKE_HAVE_LIBMAL@

ifdef HAVE_LIBMAL
LIBMAL_SRC := $(SOURCEDIR)/extra/src/libmal
PISOCK_LIB += -L$(BUILDDIR)/extra/src/libmal/.libs -lmal
endif

# libraries needed by the modules, linked against individually in the modules
# directory, but listed here in case we build a static library:
ifeq ($(USE_MODULES),static)
MODULES_LIBS := $(PISOCK_LIB)
else
MODULES_LIBS :=
endif
# canonical host
CANONICAL_HOST := @host@

# DOC++/kdoc (doc++ is preferred, -r to do short filenames to avoid dpkg bug)
DOCXXHTML=doc++ -r -f -k -u -k $(DXXTBL) -H -d $(BILDDIR)/doc/classes
DOCXXTEX =doc++ -f -k -u -k $(DXXTBL) -H -t -o $(BILDDIR)/doc/classes.tex
KDOCHTML = kdoc -H -d $(BILDDIR)/doc/classes -u $(SOURCEDIR) -a -i -e M  
KDOCTEX =  kdoc -T -d $(BILDDIR)/doc/classes -u $(SOURCEDIR) -a -i -e M
SCANDOCHTML = @PERL@ $(SOURCEDIR)/extra/scandoc/scandoc.pl  -i $(SOURCEDIR)/extra/scandoc/Mtemplate.html -p $(BILDDIR)/doc/classes/ -t 3 
SCANDOCTEX  = echo "Cannot generate .tex class documentation with scandoc."
DOCHTML	:= @DOCHTML@
DOCTEX	:= @DOCTEX@
LATEX	:= @LATEX@
MAKEINDEX := @MAKEINDEX@
DVIPS	:= @DVIPS@
LATEX2HTML := @LATEX2HTML@ -local_icons
XGETTEXT := @XGETTEXT@
MSGFMT	:= @MSGFMT@
PERL	:= @PERL@
PSTOPDF	:= @PSTOPDF@

# compiler stuff
CPP	:= @CPP@
CPPFLAGS= @CPPFLAGS@
CC	:= @CC@
CXX	:= @CXX@
LIBTOOL	:= @LIBTOOL@
AR	:= ar
RANLIB	:= @RANLIB@
YACC	:= @YACC@

# SWIG
ifdef USE_SWIG
SWIG	:= @SWIG@
else
SWIG	:= true swig
endif
SWIGFLAGS_LIBSWIG := -I.src -c++ -python -shadow 
SWIGFLAGS := $(SWIGFLAGS_LIBSWIG) -dhtml -c

# other stuff
RM	:= rm -f
M4	:= @M4@ 
# currently broken in configure:
#INSTALL	:= @INSTALL@
#INSTALL_PROGRAM	:= @INSTALL_PROGRAM@
#INSTALL_DATA	:= @INSTALL_DATA@
INSTALL	:= $(SOURCEDIR)/extra/scripts/install-sh -c
INSTALL_PROGRAM	:= $(INSTALL) -s
INSTALL_DATA	:= $(INSTALL) -c -m 644

DESTDIR = @prefix@
# Directory in which to install scripts.
BINDIR = $(DESTDIR)/bin
# Directory in which to install library files.
DATADIR = $(DESTDIR)/share/Mahogany
# where to install docs
DOCDIR = $(DATADIR)/doc

# for the dynamic linker, better than using -rpath
LD_RUN_PATH=$(DATADIR)/$(CANONICAL_HOST)/lib
MODULEDIR=$(DATADIR)/$(CANONICAL_HOST)/modules

ifdef USE_LIBTOOL
LINK = $(LIBTOOL) --mode=link $(CXX) -Wl-r$(LD_RUN_PATH)
else
LINK = $(CXX) -Wl-r$(LD_RUN_PATH)
#-Wl-export-dynamic 
endif

CFLAGS   = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
# for the python code:
CXXFLAGS_RELAXED = @CXXFLAGS_RELAXED@
LDFLAGS = @LDFLAGS@

LIBS=$(MODULES_LIBS) @LIBS@ 
LIBS_STATIC=$(MODULES_LIBS) @LIBS_STATIC@ 
GUI_LIBS=@GTK_LDFLAGS@
GUI_LIBS_STATIC=@GUI_LIBS_STATIC@
